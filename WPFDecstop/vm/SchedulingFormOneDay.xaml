<Page x:Class="WPFDecstop.vm.SchedulingFormOneDay"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPFDecstop.vm"
        mc:Ignorable="d"
        Title="SchedulingForm" Height="450" Width="800" Name="Scheduling">
    <Grid>
        <DataGrid Name="dayDataGrid" AutoGenerateColumns="False">
            <DataGrid.Columns>
                <DataGridTextColumn  Binding="{Binding Path=audincese}" Header="Аудитории"/>
                
                <DataGridTemplateColumn Header="1">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <StackPanel>
                                <ComboBox ItemsSource ="{Binding ere,ElementName=Scheduling}" IsEditable="True"/>
                                <ComboBox ItemsSource ="{Binding ere,ElementName=Scheduling}" IsEditable="True"/>
                            </StackPanel>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
                
                <DataGridTextColumn Header="2"/>
                <DataGridTextColumn Header="3"/>
                <DataGridTextColumn Header="4"/>
                <DataGridTextColumn Header="5"/>
                <DataGridTextColumn Header="6"/>
                <DataGridTextColumn Header="7"/>
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</Page>
