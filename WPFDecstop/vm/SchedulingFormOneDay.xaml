<Page x:Class="WPFDecstop.vm.SchedulingFormOneDay"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPFDecstop.vm"
        mc:Ignorable="d"
        Title="SchedulingForm" Height="700" Width="1400" Name="Scheduling">
    <Grid>
    <Grid.RowDefinitions>
        <RowDefinition Height="Auto"/>
        <RowDefinition/>
    </Grid.RowDefinitions>
        <Grid Grid.Row="0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="200"/>
                <ColumnDefinition Width="200"/>
                <ColumnDefinition Width="200"/>
                <ColumnDefinition Width="200"/>
                <ColumnDefinition Width="200"/>
                <ColumnDefinition Width="200"/>
                <ColumnDefinition Width="200"/>
            </Grid.ColumnDefinitions>
            <TextBlock Grid.Column="0" Grid.Row="0" Text="Кабинет"></TextBlock>
            <TextBlock Grid.Column="1" Grid.Row="0" Text="Понедельник"></TextBlock>
            <TextBlock Grid.Column="2" Grid.Row="0" Text="Вторник"></TextBlock>
            <TextBlock Grid.Column="3" Grid.Row="0" Text="Среда"></TextBlock>
            <TextBlock Grid.Column="4" Grid.Row="0" Text="Четвег"></TextBlock>
            <TextBlock Grid.Column="5" Grid.Row="0" Text="Пятница"></TextBlock>
            <TextBlock Grid.Column="6" Grid.Row="0" Text="Суббота"></TextBlock>
            </Grid>
        <ScrollViewer Grid.Row="1">
        <Grid >
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="200"/>
                <ColumnDefinition Width="200"/>
                <ColumnDefinition Width="200"/>
                <ColumnDefinition Width="200"/>
                <ColumnDefinition Width="200"/>
                <ColumnDefinition Width="200"/>
                <ColumnDefinition Width="200"/>
            </Grid.ColumnDefinitions>
            <ListBox Name="ListViewCabinet" Grid.Column="0"></ListBox>
            <ListBox Name="ListView1" Grid.Column="1"></ListBox>
            <ListBox Name="ListView2" Grid.Column="2"></ListBox>
            <ListBox Name="ListView3" Grid.Column="3"></ListBox>
            <ListBox Name="ListView4" Grid.Column="4"></ListBox>
            <ListBox Name="ListView5" Grid.Column="5"></ListBox>
            <ListBox Name="ListView6" Grid.Column="6"></ListBox>
             </Grid>
            </ScrollViewer>
    </Grid>
</Page>
