<Page x:Class="WPFDecstop.vm.TypCabinet.AddTypCabinet"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:local="clr-namespace:WPFDecstop.vm.TypCabinet"
      mc:Ignorable="d"
      Title="AddTypCabinet" Height="450" Width="800">
    <StackPanel>
        <Border Style="{StaticResource BorderBaseTextBlockBox}">
            <TextBlock Text="Название типа кабинета" Style="{StaticResource BaseTextBlock}" />
        </Border>
        <Border Style="{StaticResource BorderBaseTextBlockBox}">
            <TextBox Name="Cabinet_Type_Name_TextBox" Style="{StaticResource BaseTextBox}" />
        </Border>
        <Border Style="{StaticResource BorderBaseTextBlockBox}">
            <TextBlock Text="Описание" Style="{StaticResource BaseTextBlock}" />
        </Border>
        <Border Style="{StaticResource BorderBaseTextBlockBox}">
            <TextBox Name="Description_TextBox" Style="{StaticResource BaseTextBox}" />
        </Border>
        <Button Content="Добавить тип кабинета" Click="ButtonBase_OnClick_Add_an_account_type"/>
    </StackPanel>
</Page>