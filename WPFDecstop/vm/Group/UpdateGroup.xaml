<Page x:Class="WPFDecstop.vm.Group.UpdateGroup"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:local="clr-namespace:WPFDecstop.vm.Group"
      mc:Ignorable="d"
      Title="UpdateGroup" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <TextBlock Grid.Row="0" Text="номер группы"/>
        <TextBox Grid.Row="1"/>
        <TextBlock Grid.Row="2" Text="короткий номер"/>
        <TextBox Grid.Row="3"/>
        <TextBlock Grid.Row="4" Text="количество студентов"/>
        <TextBox Grid.Row="5"/>
        <Button Grid.Row="6" Content="Обновить группу"/>
        <Button Grid.Row="7" Content="Удалить группу"/>
    </Grid>
</Page>
